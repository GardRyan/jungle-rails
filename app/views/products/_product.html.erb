<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>
  <div>
  <%= button_to "Sold Out!", {}, class: 'btn btn-secondary', disabled: product.quantity?, style: ('display:none' if product.quantity?) %>
  <%= button_to add_item_cart_path(product_id: product.id), method: :post, class: 'btn btn-primary', disabled: !product.quantity? do %>
    <%= fa_icon "shopping-cart", text: 'Add' %>
  <% end %>
</div>
</article>
